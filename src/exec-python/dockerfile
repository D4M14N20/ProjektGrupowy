FROM alpine:3.20

ARG LOGS=on
ENV LOGS=$LOGS

RUN apk add --no-cache python3

RUN addgroup -S execgroup
RUN adduser -S execuser -G execgroup
USER execuser

WORKDIR /app
COPY exec.py .
COPY main.py .
COPY judge.py .
RUN mkdir /tmp/out
RUN mkdir /tmp/in

ENV INPUT=/data/in
ENV OUTPUT=/data/out

ENTRYPOINT ["python3", "-u", "main.py"]
